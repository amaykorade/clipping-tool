generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// --- Plans (Free, Starter, Pro) ---
enum Plan {
  FREE
  STARTER
  PRO
}

// --- NextAuth.js (Google login) ---
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  videos        Video[]

  // Subscription (plan & Razorpay)
  plan                      Plan      @default(FREE)
  razorpayCustomerId        String?
  razorpaySubscriptionId    String?
  subscriptionCurrentPeriodEnd DateTime?

  // Free plan: 1 clip download per month
  clipDownloadsUsedThisMonth Int      @default(0)
  clipDownloadsPeriodStart   DateTime?
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires     DateTime
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// --- App models ---
model Video {
  id            String    @id @default(cuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Owner (optional for backward compat with existing videos)
  userId        String?
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Video metadata
  title         String
  originalUrl   String?
  fileName      String
  duration      Int
  fileSize      Int

  // Storage paths
  storageKey    String
  thumbnailUrl  String?

  // Processing status
  status        VideoStatus @default(UPLOADED)

  // Transcription data
  transcript    Json?
  transcribedAt DateTime?

  // Relationships
  clips         Clip[]
  jobs          Job[]

  @@index([status])
  @@index([createdAt])
  @@index([userId])
}

model Clip {
  id            String    @id @default(cuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Parent video
  videoId       String
  video         Video     @relation(fields: [videoId], references: [id], onDelete: Cascade)

  // Clip metadata
  title         String
  startTime     Float
  endTime       Float
  duration      Float

  // AI - generated metadata
  confidence    Float?
  keywords      String[]

  // Output Configuration
  aspectRatio  AspectRatio @default(VERTICAL)
  captionStyle String?

  // Storage
  outputUrl   String?
  status      ClipStatus   @default(PENDING)

  @@index([videoId])
  @@index([status])
}

model Job {
  id          String      @id @default(cuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Job tracking
  type        JobType
  status      JobStatus   @default(QUEUED)
  progress    Int         @default(0)

  // Related entities
  videoId     String
  video       Video       @relation(fields: [videoId], references: [id], onDelete: Cascade)

  // Error handling
  error       String?
  retryCount  Int         @default(0)
  maxRetries  Int         @default(3)

  // Timings
  startedAt   DateTime?
  completedAt DateTime?

  @@index([status])
  @@index([type])
}


// Enums

enum VideoStatus {
  UPLOADED
  TRANSCRIBING
  ANALYZING
  READY
  ERROR
}

enum ClipStatus {
  PENDING
  PROCESSING
  COMPLETED
  ERROR
}

enum AspectRatio{
  VERTICAL 
  SQUARE     
  LANDSCAPE
}

enum JobType {
  TRANSCRIBE
  ANALYZE
  GENERATE_CLIP
  BATCH_EXPORT
}

enum JobStatus {
  QUEUED
  RUNNING
  COMPLETED
  FAILED
}